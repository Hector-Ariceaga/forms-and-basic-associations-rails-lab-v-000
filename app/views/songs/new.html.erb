<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :artist_name, 'Artist' %>
  <%= f.text_field :artist_name %>
  <%= f.label :song_genre, 'Genre' %>
  <%= f.collection_select :genre_name, Genre.all, :name, :name, id: :song_genre_id %>
  <%= f.label :song_notes_1, 'Note 1' %>
  <%= f.text_field :note_contents, id: :song_notes_1 %>
  <%= f.label :song_notes_2, 'Note 2' %>
  <%= f.text_field :note_contents, id: :song_notes_2 %>
  <br />

  <%= f.submit %>
<% end %>
